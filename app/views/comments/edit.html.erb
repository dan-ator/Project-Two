<h1>Edit Comment</h1>

<div class="form">
  <%= form_for [@comment.info_item, @comment] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <!-- try f.text_area to make a bigger text window for the body -->
  <%= f.text_area :body %>

  <%= f.submit "Edit Comment" %>
  <% end %>
</div>

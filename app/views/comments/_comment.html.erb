<!-- nice use of partials here! -->
<% if comment.user.profile %>
  <div class = "comments"><strong><%= comment.title %> - <%= link_to "#{comment.user.email}",profile_path(comment.user.profile) %></strong>
<% else %>
  <div class = "comments"><strong><%= comment.title %> - <%= comment.user.email %></strong>
<% end %>
<div class = "edit_delete">
  <% if can? :update, comment %>
    <%= link_to "Edit Comment", edit_info_item_comment_path(comment.info_item, comment) %>
  <% end %>

  <% if can? :destroy, comment %>
    <%= link_to "Delete Comment", info_item_comment_path(comment.info_item, comment), method: :delete, data:{confirm: "Are you sure you want to delete this comment?"} %>
  <% end %>
</div>

<p><%= comment.body %></p>

</div>

<h1>New Topic</h1>

<div class="form">
  <%= form_for [@report, @info_item] do |f| %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :body %>
  <!-- try f.text_area to make a bigger text window for the body -->
  <%= f.text_area :body %>

  <%= f.submit "Add Topic" %>
  <% end %>
</div>

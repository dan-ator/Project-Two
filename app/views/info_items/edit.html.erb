<h1>Edit Topic</h1>

<div class="form">
  <%= form_for [@info_item.report, @info_item] do |f| %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :body %>
  <!-- try f.text_area to make a bigger text window for the body -->
  <%= f.text_field :body %>

  <%= f.submit "Edit Topic" %>
  <% end %>
</div>
